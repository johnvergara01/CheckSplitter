<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GrandTotalFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GrandTotalFrag">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/eachPersonPays_text"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="48dp"
            android:text="@string/each_person_pays"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/grandTotal_editText"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:inputType="textShortMessage"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eachPersonPays_text" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>